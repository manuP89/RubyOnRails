
<%= form_tag({controller: "ProcesarFormularios", action: "primera_pagina"}, method: "get") do %>
	<%= label_tag(:nombre, "Indica tu nombre:") %>
	<%= text_field_tag(:nombre) %><br>
	
	<%= check_box_tag("check_box_numeros[]", "uno") %> Uno
	<%= check_box_tag("check_box_numeros[]", "dos") %> Dos
	<br>
	Te gusta el formulario?? <br>
	<%= radio_button_tag(:gusta, "Si") %>Si<br>
	<%= radio_button_tag(:gusta, "No") %>No<br>
	Contrase√±a <%= password_field_tag(:secreto) %> <br>
	Fecha de nacimiento <%= date_field_tag(:nacimiento) %> <br>
	E-mail <%= email_field_tag(:email) %><br>
	Color <%= color_field_tag(:color)%><br>
	Edad <%= number_field_tag(:edad, in: 1..100, step: 1)%><br>
	Comentarios <%= text_area_tag(:comentario, "observaciones", size: "20x5")%><br>
	
	<%= submit_tag("Enviar") %>
<% end %>
