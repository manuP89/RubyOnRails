<meta charset="UTF-8">
<h1>Este es el resumen de su pedido</h1>
<style type="text/css">
	table, td{
		margin-left: 15%;
		border: 2px solid black;
		text-align: left;
		vertical-align: top;
		border-collapse: collapse;
		width: 500px;
		font-family: verdana;
	}
</style>
<table>
	<tr>
		<td>Direccion</td>  <td><%=@cliente.direccion%></td>
	</tr>
	<tr>
		<td>Telefono</td>	<td><%=@cliente.telefono%></td>
	</tr>
</table>
<table>	
	<%
	for pizza in @@pizzas
		tam = pizza.tamano
		ing = pizza.ingredientes
		pre = pizza.precio
	%>
		<tr>
			<td>Tamaño</td>		<td><%=tam%></td>
		</tr>
		<tr>
			<td>Ingredientes</td>	<td><%=ing%></td>
		</tr>
		<tr>
			<td>Precio</td>		<td><%=pre%> €</td>
		</tr>
	<%
	end
	%>
</table>
<table>
	<tr>
		<td>Precio Total</td>   <td><%=@precioTotal%></td>
	</tr>
</table>		