<h1>Bienvenido a nuestra zapateria</h1>

<table class="tabla">
	<tr>
		<th>Id</th>
		<th>Tipo</th>
		<th>Color</th>
		<th>Talla</th>
		<th>Borrar</th>
		<th>Modificar</th>
	</tr>
<% for zapato in @zapatos %>
	<tr>
		<td><%=zapato.id%></td>
		<td><%=zapato.tipo%></td>
		<td><%=zapato.color%></td>
		<td><%=zapato.talla%></td>
		<td><a href="/zapateria/baja?id=<%=zapato.id%>">Eliminar zapato</a></td>
		<td><a href="/zapateria/modificar_vista?id=<%=zapato.id%>">Modificar zapato</a></td>
	</tr>
<% end %>

</table>
